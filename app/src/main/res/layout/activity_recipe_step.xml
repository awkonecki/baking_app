<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fl_recipe_step_detail_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_recipe_step_detail_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_recipe_step_detail_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_recipe_step_detail_navigation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">
        </FrameLayout>

    </android.support.constraint.ConstraintLayout>
</layout>